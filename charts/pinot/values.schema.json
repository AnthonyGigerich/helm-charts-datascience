{
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "properties": {
    "pinot": {
      "type": "object",
      "description": "apache pinot",
      "properties": {
         "controller": {        
            "type": "object",
            "description": "Configuration for controller",
            "properties": {
              "replicaCount": {
                "description": "number of replicas",
                "type": "integer",
                "default": 1
              }
            }
          }
        }
      }
    },
    "ingress": {
      "type": "object",
      "form": true,
      "title": "Ingress Details",
      "properties": {
        "hostname": {
            "type": "string",
            "form": true,
            "title": "Hostname",
            "x-form": {
              "value": "{{project.id}}-{{k8s.randomSubdomain}}.{{k8s.domain}}"
            }
        }    
      }
    }
}

